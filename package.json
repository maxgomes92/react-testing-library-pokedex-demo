{
  "name": "react-testing-library-demo",
  "version": "1.0.0",
  "description": "An example of how to use the react-testing-library in codesandbox",
  "keywords": [],
  "homepage": "https://codesandbox.io/s/new",
  "main": "src/index.js",
  "dependencies": {
    "axios": "^1.3.6",
    "react": "^18.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false --env=jest-environment-jsdom --collect-coverage",
    "test:watch": "react-scripts test --env=jest-environment-jsdom --collect-coverage",
    "eject": "react-scripts eject"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!axios)"
    ]
  },
  "setupFilesAfterEnv": [
    "<rootDir>/src/setupTests.ts"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "jest-environment-jsdom": "^29.5.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  }
}
